<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.truparsecreative.smartwaitress"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Smart Waitress</name>

    <description>
		Smart waitress is a food ordering app that offers users to make their food ordering system easy. 
    </description>

    <author href="http://truparsecreative.com" email="info@truparsecreative.com">
		Okonkwo Henry
    </author>

    <preference name="phonegap-version" value="3.7.0" />
    <preference name="webviewbounce" value="false" />
	<preference name="orientation" value="portrait" />
			
    <icon src="icon/icon.png" />
    <gap:splash src="icon/splash.jpg" />
	<splash src="icon/ipad.png" platform="ios" width="768" height="1024" />
	
	<gap:plugin name="com.plugins.shortcut" />
	

	</widget>
	